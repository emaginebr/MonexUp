# ===========================================
# MonexUp - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control!
# ===========================================

# --- Database (DigitalOcean Managed PostgreSQL) ---
DB_HOST=
DB_HOST_PRIVATE=
DB_PORT=25060
DB_NAME=monexup
DB_USER=
DB_PASSWORD=

# --- Database (Legacy/Direct PostgreSQL) ---
DB_LEGACY_HOST=
DB_LEGACY_PORT=5432
DB_LEGACY_USER=
DB_LEGACY_PASSWORD=

# --- Stripe ---
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# --- MailerSend ---
MAILERSEND_API_TOKEN=
MAILERSEND_SENDER=
MAILERSEND_API_URL=https://api.mailersend.com/v1/email

# --- DigitalOcean Spaces (S3-compatible) ---
DO_SPACES_ACCESS_KEY=
DO_SPACES_SECRET_KEY=
DO_SPACES_BUCKET=monexup
DO_SPACES_REGION=nyc3
DO_SPACES_ENDPOINT=

# --- Azure Container Registry ---
AZURE_ACR_SERVER=
AZURE_ACR_USERNAME=
AZURE_ACR_PASSWORD=

# --- SSL Certificate ---
SSL_CERT_PASSWORD=

# --- SQL Server (Docker) ---
SQLSERVER_SA_PASSWORD=

# --- zTools API ---
zTools__ApiURL=
