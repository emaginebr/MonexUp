# ===========================================
# MonexUp - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control!
# ===========================================

# --- PostgreSQL (Docker container) ---
POSTGRES_USER=monexup_user
POSTGRES_PASSWORD=
POSTGRES_DB=monexup

# --- Database connection (used by .NET apps) ---
DB_HOST=postgres
DB_PORT=5432
DB_NAME=monexup
DB_USER=monexup_user
DB_PASSWORD=

# --- Database (DigitalOcean Managed PostgreSQL - production) ---
DB_HOST_PRIVATE=
# DB_PORT=25060  # Use 25060 for DO managed, 5432 for Docker

# --- NAuth ---
NAUTH_DB_NAME=nauth_db
NAUTH_JWT_SECRET=

# --- Stripe ---
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# --- MailerSend ---
MAILERSEND_API_TOKEN=
MAILERSEND_SENDER=
MAILERSEND_API_URL=https://api.mailersend.com/v1/email

# --- DigitalOcean Spaces (S3-compatible) ---
DO_SPACES_ACCESS_KEY=
DO_SPACES_SECRET_KEY=
DO_SPACES_BUCKET=monexup
DO_SPACES_REGION=nyc3
DO_SPACES_ENDPOINT=

# --- ChatGPT (used by zTools) ---
CHATGPT_APIURL=https://api.openai.com/v1/chat/completions
CHATGPT_IMAGEAPIURL=https://api.openai.com/v1/images/generations
CHATGPT_APIKEY=
CHATGPT_MODEL=gpt-3.5-turbo

# --- Frontend (baked at build time) ---
REACT_APP_API_URL=http://localhost:5000
REACT_APP_NAUTH_API_URL=http://localhost:5000
REACT_APP_STRIPE_PUBLISHABLE_KEY=

# --- Azure Container Registry (production deploy) ---
AZURE_ACR_SERVER=
AZURE_ACR_USERNAME=
AZURE_ACR_PASSWORD=

# --- SSL Certificate (production only) ---
SSL_CERT_PASSWORD=
